<% content_for :title, t('devise.sessions.new.title') %>

<div class="container">
  <div class="login-box">
    <div>
      <div class="login-form row">
        <div class="col-sm-12 text-center login-header">
          <i class="login-logo jebri-logo fa-5x"></i>
        </div>
        <div class="col-sm-12">
          <div class="login-body">
            <h4 class="title"><%= t('devise.sessions.new.title') %></h4>
            <% if flash[:alert]  %>
              <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%- flash.each do |name, msg| -%>
                    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                <%- end -%>
              </div>
            <% end %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="control">
                <%= f.email_field :email, autofocus: true, placeholder: 'email', required: true %>
              </div>
              <div class="control">
                <%= f.password_field :password, autocomplete: 'off', placeholder: 'password', required: true %>
              </div>
              <% if devise_mapping.rememberable? -%>
                  <div class="control">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, value: t('devise.sessions.new.remember_me')  %>
                  </div>
              <% end -%>
              <div class="login-button text-center">
                <%= f.submit t('devise.sessions.new.title'), class: 'btn btn-block btn-primary btn-jebri' %>
              </div>
            <% end %>
          </div>
          <div class="login-footer">
            <span class="text-right"><%= render 'devise/shared/links' %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>