<div id="filterrific_results">

    <div>
        <%= page_entries_info cities %>
    </div>

    <table class="table">
        <tr>
          <th><%= t('activerecord.attributes.city.name') %></th>
          <th><%= t('activerecord.attributes.city.enabled') %></th>
          <th><%= t('activerecord.attributes.city.created_at') %></th>
          <th><%= t('common_words.actions') %></th>
        </tr>
        <% cities.each do |city| %>
        <tr>
          <td><%= link_to(city.name, net_state_city_path(city.state, city)) %></td>
          <td><%= link_to(t("common_words.#{city.enabled}"), net_state_city_path(city.state, city)) %></td>
          <td><%= link_to(city.created_at.to_s(:short), net_state_city_path(city.state, city)) %></td>
          <td>
            <%= link_to net_state_city_path(city.state, city), class: 'btn btn-primary' do %>
                <i class="fa fa-eye"></i>
                <%= t('crud.show.title') %>
            <% end %>
            <%= link_to edit_net_state_city_path(city.state, city), class: 'btn btn-info' do %>
                <i class="fa fa-pencil"></i>
                <%= t('crud.edit.title') %>
            <% end %>
            <%= link_to net_state_city_path(city.state, city), class: 'btn btn-danger', method: :delete, data: { confirm: t('crud.delete.confirm') } do %>
                <i class="fa fa-remove"></i>
                <%= t('crud.delete.title') %>
            <% end %>
          </td>
        </tr>
        <% end %>
    </table>
</div>

<%= will_paginate cities %>