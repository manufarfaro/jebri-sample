<%= form_for(commerce, url: net_commerce_path) do |f| %>
  <% if commerce.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="fa fa-close"></i></span></button>
      <h4><%= t('crud.error.with_count.title', error_count: commerce.errors.count) %>:</h4>
      <ul>
        <% commerce.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: t('activerecord.attributes.commerce.name') %>
  </div>
  <div class="form-group">
    <%= f.label :url %>
    <%= f.url_field :url, class: 'form-control', placeholder: t('activerecord.attributes.commerce.url') %>
  </div>
  <div class="form-group">
    <div class="media">
      <div class="media-left">
        <%= image_tag commerce.avatar.url(:thumb) %>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= f.label :avatar %></h4>
        <%= f.file_field :avatar, placeholder: t('activerecord.attributes.commerce.avatar') %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :enabled %>
    <%= f.select(
            :enabled,
            Commerce.options_for_enabled,
            {},
            { class: 'form-control dropdown-toggle' })
    %>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="btn-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <%= link_to net_commerces_path, class: 'btn btn-warning col-xs-6 col-sm-6 col-md-6 col-lg-6' do %>
            <i class="fa fa-level-up"></i>
            <%= t('common_words.go_back') %>
        <% end %>
        <button type="submit" class="btn btn-success col-xs-6 col-sm-6 col-md-6 col-lg-6">
          <i class="fa fa-save"></i>
          <%= t('crud.edit.title') %>
        </button>
      </div>
    </div>
  </div>
<% end %>
