<% content_for :title, t('states.title') %>
<% content_for :subtitle, t('crud.show.title_id', id: @state.id) %>

<% if notice %>
    <div class="alert alert-info alert-dismissible" role="alert" id="notice">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
<% end %>

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="well">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.state.id' %></h3>
        </div>
        <div class="panel-body">
          <%= @state.id %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.state.country_alpha2' %></h3>
        </div>
        <div class="panel-body">
          <%= ISO3166::Country.new(@state.country_alpha2) %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.state.name' %></h3>
        </div>
        <div class="panel-body">
          <%= @state.name %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.state.ISO3166_2' %></h3>
        </div>
        <div class="panel-body">
          <%= @state.ISO3166_2 %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.state.enabled' %></h3>
        </div>
        <div class="panel-body">
          <%= t("common_words.#{@state.enabled}") %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.state.created_at' %></h3>
        </div>
        <div class="panel-body">
          <%= @state.created_at.to_s(:short) %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.state.updated_at' %></h3>
        </div>
        <div class="panel-body">
          <%= @state.updated_at.to_s(:short) %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="btn-group col-xs-12 col-sm-12 col-md-12 col-lg-12" role="group">
        <%= link_to net_states_path, class: 'btn btn-warning col-xs-!2 col-sm-6 col-md-3 col-lg-3' do %>
            <i class="fa fa-level-up"></i>
            <%= t('common_words.go_back') %>
        <% end %>
        <%= link_to edit_net_state_path, class:'btn btn-info col-xs-12 col-sm-6 col-md-3 col-lg-3'  do %>
            <i class="fa fa-pencil"></i>
            <%= t('crud.edit.title') %>
        <% end %>
        <%= link_to net_state_cities_path(@state), class:'btn btn-primary col-xs-12 col-sm-6 col-md-3 col-lg-3'  do %>
            <i class="fa fa-tags"></i>
            <%= t('activerecord.attributes.state.actions.see_cities') %>
        <% end %>
        <%= link_to net_state_path(@state), method: :delete, data: { confirm: t('crud.delete.confirm') }, class:'btn btn-danger col-xs-12 col-sm-6 col-md-3 col-lg-3'  do %>
            <i class="fa fa-remove"></i>
            <%= t('crud.delete.title') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
