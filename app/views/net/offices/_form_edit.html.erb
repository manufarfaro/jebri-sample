<%= form_for(office, url: net_commerce_office_path) do |f| %>
  <% if office.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="fa fa-close"></i></span></button>
      <h4><%= t('crud.error.with_count.title', error_count: office.errors.count) %>:</h4>
      <ul>
        <% office.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :commerce %>
    <%= f.text_field :commerce, disabled: true, value: @commerce.name ,class: 'form-control', placeholder: t('activerecord.attributes.office.commerce') %>
    <%= f.hidden_field :commerce_id, value: @commerce.id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.select(
      :city_id,
      grouped_options_for_select(Office.options_for_cities, f.object.city_id),
      {},
      { class: 'form-control dropdown-toggle' })
    %>
  </div>

  <div class="form-group">
    <%= f.label :fantasy_name %>
    <%= f.text_field :fantasy_name, class: 'form-control', placeholder: t('activerecord.attributes.office.fantasy_name') %>
  </div>

  <div class="form-group">
    <%= f.label :office_type %>
    <%= f.select(
      :office_type,
      Office.office_types.keys.to_a,
      {},
      { class: 'form-control dropdown-toggle' })
    %>
  </div>

  <div class="form-group">
    <%= f.label :is_sales %>&nbsp; &nbsp;<%= f.check_box :is_sales %>
  </div>

  <div class="form-group">
    <%= f.label :is_technical_support %>&nbsp; &nbsp;<%= f.check_box :is_technical_support %>
  </div>

  <div class="form-group">
    <%= f.label :url %>
    <%= f.url_field :url, class: 'form-control', placeholder: t('activerecord.attributes.office.url') %>
  </div>

  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, class: 'form-control', style: 'resize: vertical;', placeholder: t('activerecord.attributes.office.notes') %>
  </div>

  <div class="form-group">
    <%= f.label :street %>
    <%= f.text_field :street, class: 'form-control', placeholder: t('activerecord.attributes.office.street') %>
  </div>

  <div class="form-group">
    <%= f.label :number %>
    <%= f.text_field :number, class: 'form-control', placeholder: t('activerecord.attributes.office.number') %>
  </div>

  <div class="form-group">
    <%= f.label :floor %>
    <%= f.text_field :floor, class: 'form-control', placeholder: t('activerecord.attributes.office.floor') %>
  </div>

  <div class="form-group">
    <%= f.label :appartment %>
    <%= f.text_field :appartment, class: 'form-control', placeholder: t('activerecord.attributes.office.appartment') %>
  </div>

  <div class="form-group">
    <%= f.label :enabled %>
    <%= f.select(
            :enabled,
            Office.options_for_enabled,
            {},
            { class: 'form-control dropdown-toggle' })
    %>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="btn-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <%= link_to net_commerce_offices_path, class: 'btn btn-warning col-xs-6 col-sm-6 col-md-6 col-lg-6' do %>
            <i class="fa fa-level-up"></i>
            <%= t('common_words.go_back') %>
        <% end %>
        <button type="submit" class="btn btn-success col-xs-6 col-sm-6 col-md-6 col-lg-6">
          <i class="fa fa-save"></i>
          <%= t('crud.edit.title') %>
        </button>
      </div>
    </div>
  </div>
<% end %>
