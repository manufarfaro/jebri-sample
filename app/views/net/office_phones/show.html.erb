<% content_for :title, t('office_phones.title') %>
<% content_for :subtitle, t('crud.show.title_id', id: @phone.id) %>

<% if notice %>
    <div class="alert alert-info alert-dismissible" role="alert" id="notice">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
<% end %>

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="well">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.office_phone.id' %></h3>
        </div>
        <div class="panel-body">
          <%= @phone.id %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.office_phone.commerce' %></h3>
        </div>
        <div class="panel-body">
          <%= link_to @office.commerce.name, net_commerce_path(@office.commerce) %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.office_phone.phone_type' %></h3>
        </div>
        <div class="panel-body">
          <%= @phone.phone_type %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.office_phone.number' %></h3>
        </div>
        <div class="panel-body">
          <%= @phone.number %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.office_phone.enabled' %></h3>
        </div>
        <div class="panel-body">
          <%= t("common_words.#{@phone.enabled}") %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.office_phone.notes' %></h3>
        </div>
        <div class="panel-body">
          <%= @phone.notes %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.office.created_at' %></h3>
        </div>
        <div class="panel-body">
          <%= @phone.created_at.to_s(:short) %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'activerecord.attributes.office.updated_at' %></h3>
        </div>
        <div class="panel-body">
          <%= @phone.updated_at.to_s(:short) %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="btn-group col-xs-12 col-sm-12 col-md-12 col-lg-12" role="group">
        <%= link_to net_commerce_office_office_phones_path, class: 'btn btn-warning col-xs-!2 col-sm-6 col-md-4 col-lg-4' do %>
            <i class="fa fa-level-up"></i>
            <%= t('common_words.go_back') %>
        <% end %>
        <%= link_to edit_net_commerce_office_office_phone_path, class:'btn btn-info col-xs-12 col-sm-6 col-md-4 col-lg-4'  do %>
            <i class="fa fa-pencil"></i>
            <%= t('crud.edit.title') %>
        <% end %>
        <%= link_to net_commerce_office_office_phones_path(@office.commerce, @office, @phone), method: :delete, data: { confirm: t('crud.delete.confirm') }, class:'btn btn-danger col-xs-12 col-sm-6 col-md-4 col-lg-4'  do %>
            <i class="fa fa-remove"></i>
            <%= t('crud.delete.title') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
