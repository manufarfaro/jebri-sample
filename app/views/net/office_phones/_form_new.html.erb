<%= form_for(phone, url: net_commerce_office_office_phones_path, method: :post) do |f| %>
  <% if phone.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="fa fa-close"></i></span></button>
      <h4><%= t('crud.error.with_count.title', error_count: phone.errors.count) %>:</h4>
      <ul>
        <% phone.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :commerce %>
    <%= f.text_field :commerce, disabled: true, value: @office.commerce.name ,class: 'form-control', placeholder: t('activerecord.attributes.office.commerce') %>
    <%= f.hidden_field :commerce_id, value: @office.commerce.id, class: 'form-control' %>
    <%= f.hidden_field :office_id, value: @office.id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone_type %>
    <%= f.text_field :phone_type, class: 'form-control', placeholder: t('activerecord.attributes.office_phone.phone_type') %>
  </div>

  <div class="form-group">
    <%= f.label :number %>
    <%= f.text_field :number, class: 'form-control', placeholder: t('activerecord.attributes.office_phone.number') %>
  </div>

  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, class: 'form-control', style: 'resize: vertical;', placeholder: t('activerecord.attributes.office_phone.notes') %>
  </div>

  <div class="form-group">
    <%= f.label :enabled %>
    <%= f.select(
      :enabled,
      OfficePhone.options_for_enabled,
      {},
      { class: 'form-control dropdown-toggle' })
    %>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="btn-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <%= link_to net_commerce_office_office_phones_path, class: 'btn btn-warning col-xs-12 col-sm-6 col-md-6 col-lg-6' do %>
            <i class="fa fa-level-up"></i>
            <%= t('common_words.go_back') %>
        <% end %>
        <button type="submit" class="btn btn-success col-xs-12 col-sm-6 col-md-6 col-lg-6">
          <i class="fa fa-save"></i>
          <%= t('crud.create.title') %>
        </button>
      </div>
    </div>
  </div>
<% end %>
